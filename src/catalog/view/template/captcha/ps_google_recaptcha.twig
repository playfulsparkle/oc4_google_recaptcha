<script src="//www.google.com/recaptcha/api.js"></script>
<fieldset>
  <legend>{{ text_captcha }}</legend>
  <div class="mb-3 required">
	{% if route|slice(0, 9) == 'checkout/' %}
		<label class="col-sm-2 col-form-label" for="input-payment-captcha">{{ entry_captcha }}</label>
		<div id="input-payment-captcha" class="g-recaptcha" data-sitekey="{{ site_key }}"></div>
		<div class="invalid-feedback">{{ error_captcha }}</div>
	{% else %}
		<label class="col-sm-2 col-form-label">{{ entry_captcha }}</label>
		<div class="col-sm-10">
			<div class="g-recaptcha" data-sitekey="{{ site_key }}"></div>
			<div class="invalid-feedback">{{ error_captcha }}</div>
		</div>
	{% endif %}
	</div>
</fieldset>
